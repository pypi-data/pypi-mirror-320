# popup for file and directory selection
<File_selecting_popup>
    title: 'Selecting Files'
    size_hint: (0.8, 0.8)
    auto_dismiss: False
    caller: None
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        Label:
            text: 'Select directories or files'
            font_size: 25
            color: (0,0,1,1)
            bold: True
            size_hint_y: None
            size_hint: (1, 0.2)
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            size_hint: (1, 0.6)
            id: filechooser_layout
            FileChooserListView:
                id: filechooser
                dirselect: True
        GridLayout:
            cols: 2
            size_hint_y: None
            size_hint: (1, 0.2)
            padding: (10,0)
            spacing: 3
            Label:
                text: 'Which file selector to use?'
            StyledSpinner:
                id: selector
                text: 'List'
                values: ['List', 'Graphic']
                size_hint_y: None
                size_hint: (1, 0.5)
