<StyledButton@Button>: # I originaly wanted just simple rounded buttons, but while testing I found this style and I liked it more
    background_color: (0,0,0,1)
    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos

<StyledSpinner@Spinner>:
    background_color: (0,0,0,1)
    option_cls: 'StyledOption'
    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos
    canvas.after:
        Color:
            rgba: (1,1,1,1)
        Line: # this is like a vertical line next to the right side of the spinner, just so its different from styled buttons
            points: self.right - 50, self.y+3, self.right - 50, self.top-3
            width: 3

<StyledOption@SpinnerOption>:
    background_color: (0,0,0,1)
    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos
    canvas.after:
        Color:
            rgba: (1,1,1,1)
        Line:
            points: self.right - 50, self.y+3, self.right - 50, self.top-3
            width: 3
        Line:
            points: self.right - 70, self.y+3, self.right - 70, self.top-3
            width: 3