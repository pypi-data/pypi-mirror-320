                size_hint: (0.5, 0.5)
                padding: 10
            StyledButton:
                text: 'Batch Rename'
                on_press: root.rename_files_screen()
                size_hint: (0.5, 0.5)
                padding: 10

# screen for sorting files
<File_SortScreen>
    all_selected_files: []
    size_bariers: []
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        Label:
            text: 'Sort files'
            size_hint_y: None
            size_hint: (1,0.2)
            font_size: 40
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
            GridLayout:
                cols: 2
                padding: 10
                spacing: 10
                Label:
                    text: 'Select sorting method'
                    size_hint_y: None
                    size_hint: (1, 0.2)
                StyledSpinner:
                    id: sort_method
                    text: 'Select sorting method'
                    values: ['Sort by types', 'Sort by size', 'Sort by date']
                    size_hint_y: None
                    size_hint: (1, 0.2)
                Label:
                    text: 'Which directories or files to sort?'
                    size_hint_y: None
                    size_hint: (1, 0.2)
                StyledButton:
                    text: 'Select directories/files'
                    on_press: root.select_directories()
                    size_hint_y: None
                    size_hint: (1, 0.2)
                Label:
                    text: 'Use original files or copies?'
                    size_hint_y: None
                    size_hint: (1, 0.2)
                StyledSpinner:
                    id: original_files
                    text: 'Select action'
                    values: ['Use original files', 'Use copies']
                    size_hint_y: None
                    size_hint: (1, 0.2)
        StyledButton:
            text: 'Sort'
            on_press: root.sort()
            size_hint_y: None
            size_hint: (1, 0.2)

        ScrollView:
            GridLayout:
                id: selected
                cols: 1
                size_hint_y: None
                height: 50
                padding: 10
                Label:
                    id: selected_files_title
                    text: 'Files selected for sorting will be here'
                    size_hint_y: None
                    height: 30
        GridLayout:
            cols: 5
            size_hint_y: None
            padding: 20
            StyledButton:
                text: 'Find Keywords'
                on_press: root.find_keywords_screen()
                size_hint: (0.5, 0.5)
