<odoo>
<!-- Data Ownership -->
<record id="service_contract_performance_obligation_ou_group" model="res.groups">
    <field name="name">Operating Unit</field>
    <field
            name="category_id"
            ref="ssi_revenue_recognition.performance_obligation_data_ownership_module_category"
        />
</record>

<record
        id="ssi_revenue_recognition.performance_obligation_company_group"
        model="res.groups"
    >
    <field name="name">Company</field>
    <field
            name="category_id"
            ref="ssi_revenue_recognition.performance_obligation_data_ownership_module_category"
        />
    <field
            name="implied_ids"
            eval="[(4, ref('service_contract_performance_obligation_ou_group'))]"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
</odoo>
