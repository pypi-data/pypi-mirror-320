<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="agresta_project" model="ir.ui.view">
        <field name="name">Agresta Project Task updates</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <data>
                <field  name="privacy_visibility" position="before">
                    <field name="hourly_price" widget="monetary"/>
                    <field name="execution_weight" widget="radio"/>
                </field>
            </data>
        </field>
    </record>
    <record id="agresta_project_list_update" model="ir.ui.view">
        <field name="name">Agresta Project List Updates</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project" />
        <field name="arch" type="xml">
            <data>
                <field  name="stage_id" position="before">
                    <field name="hourly_price" widget="monetary" optional="hide"/>
                    <field name="total_budget" optional="hide"/>
                    <field name="last_update_execution_amount" optional="hide"/>
                    <field name="last_update_execution_pcnt" optional="hide"/>
                    <field name="last_update_total_hours" optional="hide"/>
                    <field name="last_update_total_expenses" optional="hide"/>
                    <field name="last_update_total_incomes" optional="hide"/>
                </field>
            </data>
        </field>
    </record>
</odoo>
