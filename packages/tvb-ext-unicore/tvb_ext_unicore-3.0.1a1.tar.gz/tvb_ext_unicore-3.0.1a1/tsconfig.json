{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "ES2018"
  },
  "include": [
    "src/*",
    "src/components/*.tsx",
    "src/components/*.ts",
    "src/__tests__/*.tsx",
    "src/__tests__/*.ts",
    "node_modules/@types/jest/index.d.ts"
  ]
}
