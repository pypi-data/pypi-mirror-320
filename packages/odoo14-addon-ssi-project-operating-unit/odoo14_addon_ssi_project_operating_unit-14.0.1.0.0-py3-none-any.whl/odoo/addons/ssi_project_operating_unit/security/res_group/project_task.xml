<odoo>
<!-- Data Ownership -->
<record id="task_ou_group" model="res.groups">
    <field name="name">Operating Unit</field>
    <field name="category_id" ref="ssi_project.task_data_ownership_module_category" />
    <field name="implied_ids" eval="[(4, ref('ssi_project.task_project_group'))]" />
</record>

<record id="ssi_project.task_company_group" model="res.groups">
    <field name="name">Company</field>
    <field name="category_id" ref="ssi_project.task_data_ownership_module_category" />
    <field name="implied_ids" eval="[(4, ref('task_ou_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
</odoo>
