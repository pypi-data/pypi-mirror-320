<odoo>
<data noupdate="0">
<!-- Assurance Report -->
<record id="policy_template_assurance_report" model="policy.template">
    <field name="name">Standard</field>
    <field
                name="model_id"
                ref="ssi_accountant_report.model_accountant_assurance_report"
            />
    <field
                name="state_field_id"
                search="[('model_id.model','=','accountant.assurance_report'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<record id="policy_template_assurance_report_ready" model="policy.template_detail">
    <field name="template_id" ref="policy_template_assurance_report" />
    <field
                name="field_id"
                search="[('model_id.model','=','accountant.assurance_report'),('name','=','ready_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','accountant.assurance_report'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_accountant_report.assurance_report_user_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>

