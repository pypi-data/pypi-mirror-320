<odoo>
<record id="project_assignment_rule_ou" model="ir.rule">
    <field name="name">project.assignment - Responsible to operating unit data</field>
    <field name="model_id" ref="ssi_project_assignment.model_project_assignment" />
    <field name="groups" eval="[(4, ref('project_assignment_ou_group'))]" />
    <field
            name="domain_force"
        >[('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
